<h1>Login</h1>

<% if flash[:login_error].present? %>
  <h2><%= flash[:login_error] %></h2>
<% end %>

<%= form_tag(login_path, method: "post") do %>
  <%= label_tag :email %>
  <%= email_field_tag :email %>

  <%= label_tag :password %>
  <%= password_field_tag :password %> 

  <%= submit_tag "Login"  %> 
<% end %>
